snippet tpl_chrome_manifest
{
	"manifest_version": 2,
	"name": "${1:my-ext}",
	"description": "${1:my-ext description}",
	"version": "${1:0.1}",
	"icons": { "128": "icon_128.png" },
	"background": {
		"scripts": ["eventPage.js"],
		"persistent": false
	},
	"browser_action": {
		"default_icon": "icon_128.png",
		"default_title": "",
		"default_popup": "popup.html"
	},
	"permissions": [
		"activeTab"
	]
}
endsnippet
