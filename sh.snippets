snippet tmux_session_exists
local x=$(tmux-session-exist $s)
if [[ "$x" = "true" ]]; then
	exit 0
fi
endsnippet

snippet status
if [ "$status" = "0" ]; then
	echo true
else
	echo false
fi
endsnippet
